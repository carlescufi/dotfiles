function boot()
{
	MCUBOOT=~/src/mcuboot
	sign $1 $1.signed
	~/bin/hexmerge.py -o $1.merged $MCUBOOT/boot/zephyr/b/zephyr/zephyr.hex $1.signed
	nrfjprog --eraseall -f nrf52 && nrfjprog --program $1.merged -f nrf52 && nrfjprog -r -f nrf52
}



