_common_init()
{
    if [[ -z "$TMUX" ]]; then
        PS1_TMUX=
    else
        PS1_TMUX="[t]"
    fi
    export PATH=$PATH:~/bin:~/.local/bin/
    GPG_TTY=$(tty)
    export GPG_TTY
}

_common_init
if [ -n "$ZSH_VERSION" ]; then
   # assume Zsh
   _zsh_init
elif [ -n "$BASH_VERSION" ]; then
   _bash_init
else
   echo "unknown shell"
   exit 1
fi

